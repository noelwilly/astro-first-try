---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
button {
    padding: 1rem;
    border-radius: 10px;
}
.primary {
    background: royalblue;
    color: white;
}
.secondary {
    background: white;
    color: royalblue;
}
.small {
    font-size: 1rem;
}
.medium {
    font-size: 2rem;
}
.large {
    font-size: 3rem;
}
</style>